        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="boldMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="regularSmall" parent="TextAppearance.AppCompat">
